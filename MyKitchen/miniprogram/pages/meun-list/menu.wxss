page {
  background-color: #f6f6f6;
}

.list {
  padding: 24rpx 32rpx;
}

.menu-card {
  margin-bottom: 32rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.cover {
  width: 200rpx;
  height: 200rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.actions {
  display: flex;
  align-items: center;
}

.share-btn {
  background: none;
  border: none;
  padding: 0;
  margin-left: 16rpx;
  line-height: 1;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  opacity: 0.3;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}
