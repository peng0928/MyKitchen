.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 30rpx;
  color: #333;
}

.food-image {
  width: 200rpx;
  height: 200rpx;
}

.food-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  flex-wrap: wrap; /* 允许换行 */
}

.food-tags {
  margin-bottom: 10rpx;
}

.food-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
  text-align: right;
}

.sales {
  color: #999;
  font-size: 24rpx;
}


.card-theme {
  --td-swiper-radius: 0;
  --td-swiper-item-padding: 0 12rpx;
  --td-swiper-nav-dot-color: var(--td-bg-color-component, #e7e7e7);
  --td-swiper-nav-dot-active-color: var(--td-brand-color, #0052d9);
  padding-bottom: 18px;
}

.card-theme .card-theme-nav {
  bottom: -18px;
}

.scale-candidate {
  height: 126px !important;
}

/* 内容样式示例 */
.content {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
}


.two-column-container {
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.column {
  width: 48%;
}

.left-column {
  margin-right: 2%;
}

.food-item {
  margin-bottom: 20rpx;
  padding: 15rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 原有样式保持不变 */
.food-image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}

.content {
  font-size: 28rpx;
  font-weight: bold;
  margin: 10rpx 0;
  word-break: break-all; /* 长文本自动换行 */
}