<!-- pages/kitchen-list/kitchen-list.wxml -->
<view class="kitchen-page">
  <!-- 顶部标题 -->
  <view class="header">
    <!-- 搜索框 -->
    <view style="display: flex;">
    <view class="search-bar">
      <t-icon name="search" size="36rpx" color="#999"></t-icon>
      <input type="text" placeholder="搜索厨房" placeholder-class="placeholder" bindinput="handleSearchInput" />
    </view>
    <t-button theme="primary" icon="add" shape="circle" aria-label="搜索"></t-button>
  </view>
    <t-tabs value="{{activeTab}}" bind:change="switchTab">
    <t-tab-panel value="my" label="我的"></t-tab-panel>
    <t-tab-panel value="public" label="其他"></t-tab-panel>
  </t-tabs>
  </view>



  <!-- 厨房列表 -->
  <view class="kitchen-list">
    <view class="kitchen-card" wx:for="{{kitchenList}}" wx:key="id" bindtap="goToKitchenDetail" data-id="{{item.id}}">
      <view class="center">
        <image src="{{item.image}}" mode="aspectFill" class="kitchen-image" />
      </view>
      <view class="kitchen-info">
        <view class="kitchen-name">{{item.name}}</view>
        <view class="kitchen-meta">
          <view class="meta-item">
            <t-icon name="user" size="32rpx"></t-icon>
            <text>{{item.memberCount}}人</text>
          </view>
          <view class="meta-item">
            <t-icon name="star-filled" size="32rpx" color="#FFC300"></t-icon>
            <text>{{item.rating}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>