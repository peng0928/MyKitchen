/* pages/kitchen-list/kitchen-list.wxss */
.kitchen-page {
  padding-bottom: 40rpx;
  background-color: #f7f7f7;
}

.kitchen-list {
  padding: 50rpx;
}

.kitchen-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.kitchen-image {
  width: 100%;
  height: 300rpx;
  display: block;
  border-radius: 15rpx;
}

.kitchen-info {
  padding: 30rpx;
}

.kitchen-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.kitchen-meta {
  display: flex;
  align-items: center;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.meta-item text {
  margin-left: 8rpx;
}

.center{
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center;    /* 垂直居中 */
}