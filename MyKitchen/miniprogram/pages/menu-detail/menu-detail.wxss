page {
  background-color: #f6f6f6;
}

.cover {
  border-radius: 0 0 48rpx 48rpx;
}

.header {
  padding: 32rpx;
  background: #fff;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #222;
}

.meta {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.collect-btn {
  margin-top: 24rpx;
}

.content {
  padding: 32rpx;
}

.panel {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.intro-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.ing-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.amount {
  font-size: 28rpx;
  color: #666;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 30rpx;
  color: #333;
  gap: 16rpx;
}
.step-wrapper {
  padding: 0 32rpx 40rpx;
}

.step-header {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #eee;
  transition: background 0.2s;
}

.step-header.active {
  background: #fff5f0;
  color: #ff6a88;
}

.step-ball {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #ff6a88;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.step-title {
  font-size: 32rpx;
  font-weight: 600;
}

.step-section {
  padding-top: 16rpx;
}

.step-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.step-desc {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.step-img {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  margin-top: 24rpx;
}
