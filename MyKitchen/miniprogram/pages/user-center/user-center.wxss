page {
  background-color: #f6f6f6;
}

.header-card {
  display: flex;
  align-items: center;
  padding: 48rpx 32rpx;
  background: linear-gradient(135deg, #1972c6 0%, #ff6a88 100%);
  border-radius: 0 0 48rpx 48rpx;
  color: #fff;
  justify-content: space-between;
}
.left{
  align-items: center;
  text-align: center;
}
.avatar {
  flex-shrink: 0;

}

.info {
  align-items: center;
  text-align: center;
}

.name {
  font-size: 38rpx;
  font-weight: 600;
}

.code {
  font-size: 26rpx;
  margin-top: 8rpx;
  opacity: .8;
}

.bio {
  font-size: 28rpx;
  margin-top: 12rpx;
  opacity: .9;
}

.stat-box {
  display: flex;
  justify-content: space-around;
  background: #fff;
  margin: -36rpx 32rpx 24rpx;
  padding: 32rpx 0;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.num {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.footer {
  margin: 96rpx 0;
  text-align: center;
}

.avatar-actions {
  position: fixed;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 15000;
}