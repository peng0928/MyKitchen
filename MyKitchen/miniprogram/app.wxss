page {
  background-color: #f7f7f7;
  font-size: 28rpx;
}

.page-container {
  padding: 20rpx;
}

/* 菜品列表样式 */
.dish-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.dish-item {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.dish-item image {
  width: 100%;
  height: 200rpx;
}

.dish-info {
  padding: 15rpx;
}

.dish-name {
  font-weight: bold;
  margin-bottom: 5rpx;
}

.dish-price {
  color: rgb(16, 45, 161);
  margin-bottom: 10rpx;
}

/* 购物车悬浮按钮 */
.cart-fab {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
}

/* 总价样式 */
.total-price {
  text-align: right;
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

/* 表单样式 */
.form-container {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}
